<link rel="stylesheet" href="/javascripts/style.css">

<div class="bg-light py-3 ">
    
    {{#if response}}
    <div class="container ">
        <div class="row">
            <div class="col-md-12 mb-0"><a class="text-black text-decoration-none" href="/"> Home</a> <span
                    class="mx-2 mb-0">/</span> <strong class="text-black">Wishlist</strong></div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">
        <div class="row ">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="product-thumbnail">Image</th>
                                <th class="product-name">Product</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Discription</th>
                                <th class="product-total">Category</th>
                                <th class="product-remove">Action</th>
                                <th class="product-remove">Remove</th>
                            </tr>
                        </thead>

                        <tbody>

                            {{#each response}}
                             <br>

                            <tr>

                                <td class="product-thumbnail shadow-lg">
                                    <img src="/productIMG/{{this.product._id}}.jpg" alt="Image" class="img-fluid">
                                </td>
                                <td class="product-name shadow-lg">
                                    <h2 class="h5 text-black">{{this.product.proName}}</h2>
                                </td>
                                <td class="shadow-lg"><span id="price{{this.product._id}}">{{this.product.proPrice}}
                                    </span></td>
                                <td class="shadow-lg"> <span id="price{{this.product._id}}">{{this.product.proCategory}}
                                    </span></td>
                                <td class="shadow-lg"> <a href="/preview-product/{{this.product._id}}" class="btn btn-primary">View Product</a> 


                                <td class="shadow-lg">
                                    
                        <span class="btn btn-primary" onclick="wishToCart('{{this.product._id}}','{{../Uname}}')">ADD TO CART</span>

                                </td>

                                <td class="shadow-lg">
                                    <span
                                        onclick="removewishlistitem('{{this.product._id}}','{{../Uname}}')"
                                        class="btn btn-primary btn-sm">X</span></td>
                            </tr>
                            {{/each}}

                        </tbody>

                    </table>

                    <span hidden> </span>
                    {{else}}
                    <div class="container-fluid  mt-100  ">
                        <div class="row">

                            <div class="col-md-12 ">

                                <div class="card">
                                    <div class="card-header">
                                        <h5>Wishlist</h5>
                                    </div>
                                    <div class="card-body cart mb-5">
                                        <div class="col-sm-12 empty-cart-cls text-center">
                                            <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130"
                                                class="img-fluid mb-4 mr-3">
                                            <h3><strong>Your Wishlist is Empty</strong></h3>
                                            <h4>Add something to make me happy :)</h4>
                                            <a href="/" class="btn btn-primary cart-btn-transform m-3 "
                                                data-abc="true">continue shopping</a>


                                        </div>
                                    </div>
                                </div>


                            </div>

                        </div>

                    </div>
                    {{/if}}
                </div>
            </form>
        </div>


    </div>
</div>