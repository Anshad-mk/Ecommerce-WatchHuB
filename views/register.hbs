<div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
  <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
    <div class="flex flex-col overflow-y-auto md:flex-row">
      <div class="h-32 md:h-auto md:w-1/2">
        <img aria-hidden="true" class="object-cover w-full h-full dark:hidden"
          src="../assets/img/create-account-office.jpeg" alt="Office" />
        <img aria-hidden="true" class="hidden object-cover w-full h-full dark:block"
          src="../assets/img/create-account-office-dark.jpeg" alt="Office" />
      </div>
      <div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
        <div class="w-full">
          <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
            Create account
          </h1>


          {{!-- form start hear --}}

          <form action="/users/register" method="post" id="usercreate" onsubmit="return validateuser()">
            <label class="block text-sm">
              <span class="text-gray-700 dark:text-gray-400 h6">First name</span>
              <input type="text" name="firstName" id="username" onkeyup="return validatename()" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 
                  focus:border-purple-400 focus:outline-none focus:shadow-outline-purple 
                   dark:text-gray-300 dark:focus:shadow-outline-gray form-input">
              <div class="text-danger  mb-3" id="username-error"></div>

              <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400 h6">Last name</span>
                <input type="text" name="LastName" id="LastName"
                  class="block w-full mt-1  mb-3 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input" />
                <div class="text-danger" id="username-error"></div>
                <label class="block text-sm">
                  <span class="text-gray-700 dark:text-gray-400 h6">Email</span>
                  <input type="email" name="email" id="email" onkeyup="return validateEmail()"
                    class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                    placeholder="" />
                  <div class="text-danger" id="emailid-err"></div>
                </label>
                <label class="block mt-4 text-sm">
                  <span class="text-gray-700 dark:text-gray-400 h6">Password</span>
                  <input type="password" name="password" id="password" onkeyup="return validatepassword()"
                    class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input" />
                  <div class="text-danger" id="password-err"></div>
                </label>
                <label class="block mt-4 text-sm">
                  <span class="text-gray-700 dark:text-gray-400 h6">
                    Confirm password
                  </span>
                  <input type="password" name="repassword" id="repassword" onkeyup="return validatepassword()"
                    class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input" />
                  <div class="text-danger" id=""></div>
                </label>
                <span class="text-gray-700 dark:text-gray-400 small text-success">Referal Code (If you have)</span>
                <input type="text" name="Referal" id="Referal"
                  class="block w-full mt-1  mb-3 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input" />
                <p class="text-danger" id="formvali">{{err}}</p>
                <button type="submit" class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white 
transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none
 focus:shadow-outline-purple">Create account</button>


          </form>

          <hr class="my-8" />


          <p class="mt-4">
            <a class="text-sm font-medium text-purple-600 dark:text-purple-400 hover:underline" href="/users/login">
              Already have an account? Login
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function validateuser() {
    if (!validatename() || !validatepassword() || !validateEmail() || !validatename()) {
      document.getElementById('formvali').innerHTML = 'Fill All data'
      return false;
    }
    return true;
  }



</script>