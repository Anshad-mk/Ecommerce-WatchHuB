    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };

function couponoffer() {
            let errdiv = document.getElementById('couponError')
            if (!coupencheck()|| !coupenAmount()|| !expirydate()) {

                return false
                errdiv.innerHTML = "Please fill requierd data";
            }
            errdiv.innerHTML = ""
            return true;

        }


        function coupencheck() {

            let name_err = document.getElementById('Coupon_Error')
            let name = document.getElementById('couponiD').value;


            if (name.length == 0 || name == '') {
                name_err.innerHTML = "Coupon ID cannot be empty";
                return false;
            }

            
            if (name.length <= 3 || name.length >= 5) {
                name_err.innerHTML = "ID must be between 3 and 5 characters";
                return false;
            }



            name_err.innerHTML = ""
            return true;
        }



        



function coupenAmount(){
    let price = document.getElementById('CouponAmount').value
    let error = document.getElementById('CouponError')
    if(price.length<===0 || price.length ===''){
        error.innerHTML = 'Enter proper Price'
        return false;
    }
     if(price.value<=0 || price.value ==='' ){
        error.innerHTML = 'Enter proper Price'
        return false;
    }
    if(price>=500){
        error.innerHTML = 'Enter amount Less than 500'
        return false;
    }
    
    error.innerHTML =''
    return true;
}

 function expirydate(){
    let exp = document.getElementById('expdate').value
    let err =document.getElementById('EXPERR')
    let now = new Date().toLocaleDateString()
    if(exp<=now){
         return false
        err.innerHTML="Enter Proper date"
    }else{
        return true
        err.innerHTML=" "
       

    }
    
 }

      



       


