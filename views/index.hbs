<!-- Start Banner Hero -->

<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
          {{#each Banner}}
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="{{@index}}" class="active"></li>
           {{/each}} 
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="/productIMG/{{Banner.1._id}}.png" alt="">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left align-self-center">
                                <h1 class="h1 text-success">{{Banner.1.MainTittle}}</h1>
                                <h3 class="h2">{{Banner.1.SubTittle}}</h3>
                                <p>
                                  {{Banner.1.TittleDiscription}} 
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           {{#each Banner}}
            <div class="carousel-item">
               
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="/productIMG/{{this._id}}.png" alt="">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1">{{this.MainTittle}}</h1>
                                <h3 class="h2">{{this.MainTittle}}</h3>
                                <p>
                                    {{this.TittleDiscription}} 
                                    </p>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
           {{/each}}
            
